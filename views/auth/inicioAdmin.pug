extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-2.font-extrabold.text-center Bienvenido
            span.font-normal Administrador 
        h2.text-center.font-extrabold.mt-2= pagina

        div.mt-5.mx-auto.max-w-4xl
            div.bg-white.py-8.px-6.shadow-lg.rounded-lg
                p.text-center.text-gray-700 Bienvenido a la sección de administración. Aquí puedes gestionar todas las configuraciones del sistema.

        if transferencias.length > 0
            div.mt-10
                h2.text-2xl.font-extrabold.text-center Historial de Transferencias
                div.overflow-x-auto.mt-4
                    table.table-auto.w-full.border-collapse.border.border-gray-200
                        thead.bg-gray-100
                            tr
                                th.px-4.py-2.border.border-gray-200 Enviado por
                                th.px-4.py-2.border.border-gray-200 Enviado a
                                th.px-4.py-2.border.border-gray-200 Cantidad
                                th.px-4.py-2.border.border-gray-200 Fecha
                        tbody
                            each transferencia in transferencias
                                tr
                                    td.px-4.py-2.border.border-gray-200 #{transferencia.envia}
                                    td.px-4.py-2.border.border-gray-200 #{transferencia.recibe}
                                    td.px-4.py-2.border.border-gray-200 #{transferencia.dinero}
                                    td.px-4.py-2.border.border-gray-200 #{new Date(transferencia.createdAt).toLocaleString()}
        else
            p.text-center.text-gray-700.mt-10 No se han realizado transferencias aún.